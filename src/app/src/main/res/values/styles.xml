<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text style -->
    <style name="fontStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- computationactivity_layout -->
    <!-- computation area -->
    <style name="ComputeText" parent="fontStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- GridLayout area -->
        <!-- Button cell-->
        <style name="Button" parent="fontStyle">
            <item name="android:textSize">@dimen/txt_touchsize</item>
            <item name="android:layout_columnWeight">1</item>
            <item name="android:layout_width">@dimen/touchwidth</item>
        </style>
        <style name="ButtonDefault" parent="Button">
            <item name="android:background">@android:color/transparent</item>
            <item name="android:textColor">@android:color/white</item>

        </style>
        <style name="ButtonEqualDefault" parent="Button">
            <item name="android:background">@drawable/rectshadow</item>
            <item name="android:textColor">@android:color/white</item>
        </style>
        <style name="ButtonOperationDefault" parent="Button">
            <item name="android:background">@color/colorbtnOperationBackgroundDefault</item>
            <item name="android:textColor">@android:color/white</item>
        </style>
</resources>
